<div>
<h1>My tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <%= link_to task.title, task_path(task) %>
    <%= link_to task_path(task), method: :delete do  %>
    <i class="far fa-trash-alt"></i>
    <% end %>
      <% if task.completed  %>
        <i class="far fa-check-square"></i>
      <% else  %>
        <i class="far fa-square"></i>
      <% end %>
      <p> <%= task.details %></p>
  <% end %>
</div>

<%= link_to "Create a new task", new_task_path %>
<%#= check_box_tag 'completed', 1, task.completed %>


